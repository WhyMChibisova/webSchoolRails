<div class="container">
  <div class="text-right">
    <%= form_with method: :get do |form| %>
      <%= form.label :query, 'Поиск', class: 'title-sm' %>
      <%= form.text_field :query, placeholder: 'Введите название', class: 'form-text-field' %>
      <%= form.submit 'Искать', class: 'button button-main' %>
    <% end %>
  </div>

  <h2 class="title-lg mb">Наши курсы  <%= link_to fa_icon('sort-down'), course_sort_path %></h2>

  <div class="item-container">
    <% @courses.each do |course| %>
      <div class="item mb">

        <div class="text-right">
          <p class="icon"><%= link_to fa_icon('info-circle'), course %></p>
        </div>

        <p class="text-bold"><%= "Название: #{course.name}" %></p>

        <div class="item-footer">
          <p class="mt-sm"><%= "Язык изучения: #{course.language}" %></p>
          <p class="mt-sm"><%= "Цена: #{course.price}" %></p>
        </div>

      </div>
    <% end %>
  </div>

  <% if policy(:course).new? %>
    <p class="mt"><%= link_to 'Добавить курс', new_course_path, class: 'button button-main' %></p>
  <% end %>
</div>
