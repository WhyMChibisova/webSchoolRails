<div class="container">
  <div class="text-right">
    <%= form_with method: :get do |form| %>
      <%= form.label :query, 'Поиск', class: 'title-sm' %>
      <%= form.text_field :query, placeholder: 'Введите название', class: 'form-text-field' %>
      <%= form.submit 'Искать', class: 'button button-main' %>
    <% end %>
  </div>

  <h2 class="title-lg mb">Наши мероприятия  <%= link_to fa_icon('sort-down'), event_sort_path %></h2>

  <div class="item-container">
    <% @events.each do |event| %>
      <div class="item mb">

        <div class="text-right">
          <p class="icon"><%= link_to fa_icon('info-circle'), event %></p>
        </div>

        <p class="text-bold"><%= "Название: #{event.name}" %></p>

        <div class="item-footer">
          <p class="mt-sm"><%= "Дата проведения: #{l event.date, format: :short}" %></p>
          <p class="mt-sm"><%= "Язык изучения: #{event.language}" %></p>
        </div>

      </div>
    <% end %>
  </div>

  <% if policy(:event).new? %>
    <p class="mt"><%= link_to 'Добавить мероприятие', new_event_path, class: 'button button-main' %></p>
  <% end %>
</div>
