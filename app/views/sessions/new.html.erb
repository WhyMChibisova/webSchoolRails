<div class="container">
  <h2 class="title-lg mb">Авторизация</h2>

  <%= form_with scope: :session, url: session_path, data: {turbo: false} do |form| %>
    <p><%= form.label :login, 'Логин' %></p>
    <p><%= form.text_field :login, class: 'form-text-field' %></p>

    <p class="mt"><%= form.label :password, 'Пароль' %></p>
    <p><%= form.password_field :password, class: 'form-text-field' %></p>

    <p class="mt-lg"><%= form.submit 'Войти', class: 'button button-main' %></p>
  <% end %>
</div>
